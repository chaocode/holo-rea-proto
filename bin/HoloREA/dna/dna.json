              "DataFormat": "links",
              "Base": "#Agent",
              "Link": "#Agent",
              "Tag": ["#AgentRelationshipRole"]
            },
            {
              "Name": "AgentRelationshipRole",
              "Description": "Describes a user-constructed type of relationship in more general, universal characteristics",
              "DataFormat": "json",
              "SchemaFile": "AgentRelationshipRole.json",
              "Sharing": "public"
            },
            {
              "Name": "RelationshipRoleDomain",
              "Description": "A simple Links that allows the API to ingest a namespaced relationship without knowing all the hashes",
              "DataFormat": "links",
              "Sharing": "public",
              "Base": "#Agent",
              "Link": "#AgentRelationshipRole",
              "Tag": ["/name/"]
            }
