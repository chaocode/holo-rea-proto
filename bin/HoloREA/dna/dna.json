          "RibosomeType": "js",
          "BridgeFuncs": null,
          "Config": null,
          "Entries": [
            {
                "Name": "Agent",
                "Description": "Basic information about an agent",
                "DataFormat": "json",
                "SchemaFile": "Agent.json",
                "Sharing": "public"
            },
            {
              "Name": "AgentLocation",
              "Description": "Links an agent to its locations.  Only 1 can be tagged primary",
              "DataFormat": "links",
              "Base": "#Agent",
              "Link": "#Location",
              "Tag": ["primary", "secondary"],
              "Sharing": "public"
            },
            {
              "Name": "Location",
              "Description": "A location used to physically reach an Agent.  GFD: a simple array of strings for a street address",
              "DataFormat": "json",
              "SchemaFile": "Location.json",
              "Sharing": "public"
            },
            {
              "Name": "Relationship",
